<% include ./partials/header %>

  <div class="ui main text container segment">
    <div class="ui huge header"> Edit Blog </div>

    <form class="ui form" action="/blogs" method="POST">

      <div class="field">
        <label> Title </label>
        <input type="text" name="blog[title]" placeholder="Blog Title" value="<%= blog.title %>">
      </div>

      <div class="field">
        <label> Content </label>
        <textarea name="blog[body]" cols="30" rows="10"><%= blog.title %></textarea> 
      </div>

      <div class="field">
        <label> Image </label>
        <input type="text" name="blog[image]" placeholder="Image Link" value="<%= blog.image %>">
      </div>

      <input class="ui blue basic button big" type="submit">
    </form>
  </div>

<% include ./partials/footer %>